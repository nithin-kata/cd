 program:

 %{
#include <stdio.h>
%}

%%

if|else|while|int|switch|for|char|float|double|break|goto|do   { printf("keyword\n"); }

[_a-zA-Z][_a-zA-Z0-9]*                                       { printf("identifier\n"); }

[0-9]+                                                       { printf("number\n"); }

.                                                            { printf("invalid\n"); }

%%

int yywrap() {
    return 1;
}

int main() {
    yylex();
    return 0;
}



